{
  "name": "taniverse",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run tailwind:watch\" \"npm run esbuild:watch\" \"npm run serve\"",
    "esbuild:watch": "cross-env NODE_ENV=development node frontend/esbuild.config.js --watch",
    "tailwind:watch": "npx @tailwindcss/cli -i ./frontend/src/style.css -o ./build/frontend/style.css --watch",
    "build:frontend": "npm run tailwind:build && node frontend/esbuild.config.js && npm run copy:html",
    "tailwind:build": "npx @tailwindcss/cli -i ./frontend/src/style.css -o ./build/frontend/style.css --minify",
    "serve": "live-server build/frontend",
    "copy:html": "copy frontend\\src\\index.html build\\frontend\\",
    "clean": "rimraf build/frontend",
    "deploy:github": "npm run build:frontend && gh-pages -d build/frontend",
    "server": "tsx watch backend/src/main.ts",
    "build:backend": "tsc -p backend/tsconfig.json",
    "start:backend": "node build/backend/main.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.2.1",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "esbuild": "^0.25.8",
    "gh-pages": "^6.3.0",
    "live-server": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@lit/context": "^1.1.6",
    "@tailwindcss/cli": "^4.1.11",
    "@vaadin/router": "^2.0.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "fastify": "^5.5.0",
    "lit": "^3.3.1",
    "mqtt": "^5.14.0",
    "tailwindcss": "^4.1.11"
  }
}
