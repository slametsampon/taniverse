{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["shared/types/*"],
      "@utils/*": ["shared/utils/*"],
      "@frontend/*": ["frontend/src/*"],
      "@backend/*": ["backend/src/*"],
      "@domains/*": ["domains/*"]
    }
  }
}
