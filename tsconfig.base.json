{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@frontend/*": ["frontend/src/*"],
      "@backend/*": ["backend/src/*"],
      "@models/*": ["models/*"],
      "@schema/*": ["frontend/src/utils/schema/*"],
      "@utils/*": ["frontend/src/utils/*"]
    }
  }
}
