{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../build/frontend",
    "baseUrl": ".",
    "rootDir": ".",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "allowJs": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": false, // âœ… penting untuk decorator Lit
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "../models/**/*" // pastikan models ikut
  ]
}
